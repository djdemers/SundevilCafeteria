<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.domain.controller.MenuManager">
    <TextField fx:id="itemNameField" promptText="Item Name"/>
    <TextField fx:id="itemPriceField" promptText="Item Price"/>
    <Button text="Add Item" onAction="#handleAddItem"/>
    <Button text="Remove Item" onAction="#handleRemoveItem"/>
    <Label fx:id="statusLabel"/>
</VBox>
